# Server Configuration
PORT=3000
NODE_ENV=development

# JTS Configuration
JTS_PROFILE=JTS-S/v1
JTS_ALGORITHM=ES256
JTS_AUDIENCE=http://localhost:3000
JTS_BEARER_PASS_LIFETIME=300
JTS_STATE_PROOF_LIFETIME=604800

# Key paths (generated by npm run keygen)
JTS_PRIVATE_KEY_PATH=./keys/signing-key.pem
JTS_PUBLIC_KEY_PATH=./keys/signing-key.pub.pem
